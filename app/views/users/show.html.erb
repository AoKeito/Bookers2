<div>
  <%= flash[:notice] %>
</div>

<main class="container">
  <div class="row">
      <div class="col-md-3">

<%= render 'books/list', user: @user %>
</div>

    <div class="col-md-8 offset-md-1">
  <h4>Books</h4>

    <table class="table table-hover">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th colspan="1"></th>
          <th>Opinion</th>
        </tr>
      </thead>
  
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(@user) do %>
          <%= image_tag book.user.get_profile_image(100,100) %></td>
            <% end %>
          <td><%= link_to book_path(book) do %>
          <%= book.title %><td>
            <% end %>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
