<main class="container">
  <div class="row">
      <div class="col-md-3">

<%= render 'books/list', user: @user %>
</div>

    <div class="col-md-8 offset-md-1">
  <h4>Users</h4>

    <table class="table table-hover">
      <thead>
        <tr>
          <th><b>image</b></th>
          <th><b>name</b></th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %><td>
            <td><%= link_to user_path(user) do %>
            <p>Show</p>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
